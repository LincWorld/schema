{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.linc.world/draft-01/Voltage.json",
  "title": "Line Voltages",
  "type": "object",
  "properties": {
    "entityType": {
      "type": "string",
      "const": "voltage"
    },
    "id": {
      "type": "string",
      "enum": [
        "L1",
        "L2",
        "L3"
      ]
    },
    "device": {
      "$ref": "https://schema.linc.world/draft-01/Device.json"
    },
    "timestamp": {
      "type": "integer"
    },
    "data": {
      "title": "Line Voltage",
      "type": "object",
      "properties": {
        "voltage": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "rms": {
              "type": "integer",
              "unit": "millivolt"
            },
            "peak": {
              "type": "integer"
            },
            "crestFactor": {
              "type": "number"
            }
          },
          "required": [
            "rms"
          ]
        },
        "harmonicDistortion": {
          "title": "Harmonic Distortion",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "totalHarmonicDistortion": {
              "type": "number"
            },
            "totalInterharmonicDistortion": {
              "type": "number"
            }
          }
        },
        "harmonicValues": {
          "type": "array",
          "items": {
            "title": "Harmonic Values",
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "bin": {
                "type": "integer"
              },
              "value": {
                "type": "number"
              }
            }
          },
          "uniqueItems": true
        }
      }
    }
  },
  "required": [
    "device"
  ]
}
