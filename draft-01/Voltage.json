            },
            "harmonicDistortion": {
              "title": "Harmonic Distortion",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "totalHarmonicDistortion": {
                  "type": "number"
                },
                "totalInterharmonicDistortion": {
                  "type": "number"
                }
              }
            },
            "harmonicValues": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "bin": {
                    "type": "integer"
                  },
                  "voltage": {
                    "type": "integer"
                  }
                }
              },
              "uniqueItems": true
            }
