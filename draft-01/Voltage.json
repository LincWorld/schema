                }
              },
              "required": [
                "rms"
              ]
            },
            "harmonicDistortion": {
              "title": "Harmonic Distortion",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "totalHarmonicDistortion": {
                  "type": "number"
                },
                "totalInterharmonicDistortion": {
                  "type": "number"
                }
              }
            },
            "harmonicValues": {
